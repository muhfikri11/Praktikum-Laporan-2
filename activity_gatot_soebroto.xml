    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gatot_Soebroto">

    <ImageView
        android:id="@+id/img_photo"
        android:src="@drawable/gatot_subroto"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="Gatot Subroto"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Jenderal TNI (Purn.) Gatot Soebroto (lahir di
Sumpiuh, Banyumas, Jawa Tengah, 10 Oktober 1907 â€“ meninggal di
